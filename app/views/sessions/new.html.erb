<h2 class="ui center aligned icon header">
    <i class="inverted black users icon"></i>
    <div class="content">
        Welcome!
        <div class="sub header">Sign Up or Log In to your Realtime_message Account!!</div>
    </div>
</h2>

<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <%= form_for(:session, html: {class: "ui form", role: "form"}, url: login_path) do |f|%>
        <div class="field">
        <div class="field">
          <%= f.label :username, "Username" %>
          <div class="ui left icon input">
            <%= f.text_field :username, placeholder: "Enter username... " %>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label :password, "Password" %>
          <div class="ui left icon input">
            <%= f.password_field :password, placeholder: "Enter Password... " %>
            <i class="lock icon"></i>
          </div>
        </div>
        <%= f.button "Login", class: "ui blue submit button" %>
      </div>
      <% end %>
    </div>
    <div class="middle aligned column">
      <div class="ui big button blue">
        <i class="signup icon"></i>
        Sign Up
      </div>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>